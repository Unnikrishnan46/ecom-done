<section style="background-color: #d2c9ff;">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Add Product</h2>
                <form name="myForm" id="add-product" action="/add-product" method="post"
                    enctype="multipart/form-data" onsubmit="return validation1(),validation2(),validation3(),validation4()">

                    <div class="mb-5">
                        <label for="">Product Name</label>
                        <input id="name" type="text" name="name" class="form-control" required>
                    </div>


                    <div class="mb-5">
                        <label class="" for="">Original Price</label>
                        <input id="price" type="text" name="price" class="form-control" required>
                    </div>

                    <div class="mb-5">
                        <label for="">Old Price</label>
                        <input id="brandname" type="text" name="oldprice" class="form-control" required>
                    </div>


                    <div class="mb-5">
                        <label for="">Description</label>
                        <input id="description" type="text" name="description" class="form-control" required>
                    </div>


                    <div class="mb-5">
                        <label for="">Image</label>
                        <input id="image1" type="file" name="image1" class="form-control" required>
                        <p id="imgErr1" class="text-danger"></p>
                    </div>


                    <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

