<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500&display=swap');
  body{
    font-family: 'Poppins', sans-serif;
  }
</style>

<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Status</th>
      <th>Position</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img src="/product-images/{{this._id}}.jpg" alt="" style="width: 45px; height: 45px" class="rounded-circle" />
          <div class="ms-3">
            <p class="fw-bold mb-1">{{this.name}}</p>
          </div>
        </div>
      </td>
      <td>
        <p class="fw-normal mb-1">{{this.date}}</p>
      </td>
      <td>
        <span class="badge badge-success rounded-pill d-inline">Active</span>
      </td>
      <td>{{this.price}}</td>
      <td>
        <a class="btn btn-danger" href="/delete-product?id={{this._id}}" onclick="return confirm('Are you want to delete {{this.name}}')">Remove</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>