      <!-- product section -->
      <section class="product_section layout_padding">
         <div class="container">
            <div class="heading_container heading_center">
               <h2>
                  Our <span>products</span>
               </h2>
            </div>
            <div class="row">
                {{#each products}}
               <div class="col-sm-6 col-md-4 col-lg-3">
                  <div class="box">
                     <div class="option_container">
                        <div class="options">
                           <a href="/add-to-cart?id={{this._id}}" class="option1">
                           Add to cart
                           </a>
                           <a href="/place-order-single?totalValue={{this.price}}&id={{this._id}}" class="option2">
                           Buy Now
                           </a>
                        </div>
                     </div>
                     <div class="img-box">
                        <img src="/product-images/{{this._id}}.jpg" alt="">
                     </div>
                     <div style="display: flex; flex-direction: column;" class="detail-box">
                        <h5>
                           {{this.name}}
                        </h5>
                        <h6>
                           {{this.price}}
                        </h6>
                     </div>
                  </div>
               </div>
               {{/each}}
            </div>
            <div class="btn-box">
               <a href="">
               View All products
               </a>
            </div>
         </div>
      </section>
